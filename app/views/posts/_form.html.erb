<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :status , placeholder: "Add a status" %>
    <%= f.input :description , placeholder: "Provide a short decription" %>
    <%= f.input :location , placeholder: "checkin your location" %>
    <%= f.input :picture , as: :file %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
